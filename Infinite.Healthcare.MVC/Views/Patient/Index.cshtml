@model IEnumerable<PatientViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Patients</h1>
<body class="img">
<div class="col">
    <a asp-controller="Patient" asp-action="Create" class="btn btn-primary">Create New Patient</a>
</div>
<div class="col-md-9">
    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th>Patient Id</th>
                <th>Patient Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>

                    <td>@x.id</td>
                    <td>@x.PatientName</td>
                    <td>
                        <a asp-controller="Patient" asp-action="Details" asp-route-id="@x.id" class="btn btn-primary">Details</a>
                        <a asp-controller="Patient" asp-action="Edit" asp-route-id="@x.id" class="btn btn-primary">Edit</a>
                        <a asp-controller="Patient" asp-action="Delete" asp-route-id="@x.id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</body>
<style>
    .img {
        background-image: url('https://blog-images-1.pharmeasy.in/blog/production/wp-content/uploads/2022/08/26185746/Blog-Images-26-Aug.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

