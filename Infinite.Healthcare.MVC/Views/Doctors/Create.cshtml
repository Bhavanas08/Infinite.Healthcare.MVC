@model DoctorViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create a Doctor</h1>


<body class="img">
<form asp-controller="Doctors" asp-action="Create" method="post">
    <div class="row"> </div>
        <div class="col-md-4">
            <div class="mb-2">
                <label asp-for="DoctorName" class="form-label"></label>
                <input type="text" asp-for="DoctorName" class="form-control" />
                <span asp-validation-for="DoctorName"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Experience" class="form-label"></label>
                <input type="text" asp-for="Experience" class="form-control" />
                <span asp-validation-for="Experience"></span>
            </div>
            <div class="mb-2">
                <label asp-for="age" class="form-label"></label>
                <input type"text" asp-for="age" class="form-control" />
                <span asp-validation-for="age"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Qualification" class="form-label"></label>
                <input type"text" asp-for="Qualification" class="form-control" />
                <span asp-validation-for="Qualification"></span>
            </div>
            <div class="mb-2">
                <label asp-for="SpecializationName" class="form-label"></label>
                <input type="text" asp-for="SpecializationName" class="form-control" />
                <span asp-validation-for="SpecializationName"></span>
            <div class="mt-2 d-grid">
                <input type="submit" class="btn btn-primary" value="Add New" />
            </div>
        </div>
    </div>
</form>
</body>
<style>
    .img {
        background-image: url('https://images.pexels.com/photos/4226764/pexels-photo-4226764.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>


@section Scripts{

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}

